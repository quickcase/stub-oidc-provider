    script
      | hljs.initHighlightingOnLoad();

  body    
    block content

    .container
      .accordion.mb-3#debug-accordion
        .accordion-item
          h2.accordion-header#debug-title
          button.accordion-button.collapsed(type='button' data-bs-toggle='collapse' data-bs-target='#debug-collapse' aria-expanded='false' aria-controls='debug-collapse')
            | DEBUG information
          .accordion-collapse.collapse#debug-collapse(aria-labelledby="debug-title" data-bs-parent="#debug-accordion")
            .accordion-body
              h3.h3 UID
              pre
                code
                  = uid
              h3.h3 Params
              pre
                code.json
                  = JSON.stringify(params, null, 2)
              h3.h3 Client
              pre
                code.json
                  = JSON.stringify(client, null, 2)
              h3.h3 Prompt
              pre
                code.json
                  = JSON.stringify(prompt, null, 2)

      .alert.alert-warning(role='alert')
        a(href='https://github.com/quickcase/stub-oidc-provider') Stub OIDC provider
        |
        | for test only, not to be used in Production!
    
